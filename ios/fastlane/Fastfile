fastlane_version "2.28.8"

default_platform :ios

if is_ci
  password = SecureRandom.base64
  keychain_name = "fastlane"
  ENV["MATCH_KEYCHAIN_NAME"] = keychain_name
  ENV["MATCH_KEYCHAIN_PASSWORD"] = password

  create_keychain(
    name: keychain_name,
    default_keychain: true,
    unlock: true,
    timeout: 3600,
    lock_when_sleeps: true,
    password: password
  )
end

platform :ios do
  before_all do
    register_devices(devices: {
      "Felix Krause's iPhone 7" => "67b49853d5e977446301bfbd2ad2c7dae96dc562"
    }) unless is_ci

    match(type: "development", readonly: is_ci)
    match(type: "appstore", readonly: is_ci)
  end

  private_lane :build_app do
    increment_build_number(
      build_number: latest_testflight_build_number + 1,
      xcodeproj: "wwdcfamily.xcodeproj"
    )

    gym(scheme: "wwdcfamily", export_method: "app-store")
  end

  lane :beta do |options|
    build_app
    testflight(distribute_external: options[:distribute], 
                         changelog: "- Fix crash on startup that happened due to caching of user session with a revoked API token, sorry about that\n- Switch to Google Maps\n- Update Firebase API token\n- Enable image caching for Twitter avatars\n- Reduced startup time from 10 seconds to about 1 second\n- Improve fastlane setup")
  end

  lane :screenshots do
    snapshot
  end

  lane :appstore do
    snapshot
    build_app
    deliver(submit_for_review: true, force: true)
  end

  lane :update_app_icon do
    appicon(
      appicon_path: 'wwdcfamily/Images.xcassets',
      appicon_devices: [:iphone]
    )
  end
end
